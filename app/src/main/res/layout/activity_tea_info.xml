<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:background="@color/colorSecond"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityTea_Info">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通知事項"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/dateArea"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        tools:ignore="MissingConstraints">
        <Button
            android:layout_weight="2"
            android:id="@+id/btnPreDay"
            android:background="@android:drawable/ic_media_rew"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageButton
            android:src="@android:drawable/ic_dialog_dialer"
            android:background="@android:color/transparent"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txtDate"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btnNextDay"
            android:layout_weight="2"
            android:background="@android:drawable/ic_media_ff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:id="@+id/txt1"
        android:text="今日作業"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/dateArea"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/layout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_weight="4"
            android:id="@+id/txtHwSub"
            android:textSize="20dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/txtHw"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/txt_background1"
            android:divider="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt2"
        android:text="明日用品"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/StaffArea"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/txt2"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_weight="4"
            android:id="@+id/txtSfSub"
            android:textSize="20dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/txtSf"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/txt_background1"
            android:divider="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>
    <TextView
        android:id="@+id/txt3"
        android:text="其他提醒"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/StaffArea"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/OtherArea"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/txt3"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_weight="4"
            android:id="@+id/txtOtSub"
            android:textSize="20dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/txtOt"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/txt_background1"
            android:divider="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">
        <Button
            android:id="@+id/btnPost"
            android:text="新增"
            android:textSize="20dp"
            android:backgroundTint="@color/colorAccent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btnPut"
            android:text="修改"
            android:textSize="20dp"
            android:backgroundTint="@color/colorAccent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btnDelete"
            android:text="刪除"
            android:textSize="20dp"
            android:backgroundTint="@color/colorAccent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>