<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:background="@color/colorSecond"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityTea_xxx">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="IId"
            android:id="@+id/txtIId"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
        <TextView
            android:text="CId"
            android:id="@+id/txtCId"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通知事項"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            tools:ignore="MissingConstraints" />
        <LinearLayout
            android:id="@+id/dateArea"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle"
            tools:ignore="MissingConstraints">
            <Button
                android:layout_weight="2"
                android:id="@+id/btnFirst"
                android:background="@mipmap/ic_arrow_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btnPreDay"
                android:backgroundTint="@color/colorPrimary"
                android:background="@mipmap/ic_arrow_back"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/txtDate"
                android:layout_weight="1"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btnNextDay"
                android:backgroundTint="@color/colorPrimary"
                android:background="@mipmap/ic_arrow_next"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btnLast"
                android:layout_weight="2"
                android:background="@mipmap/ic_arrow_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_weight="4"
            android:id="@+id/txtSub"
            android:textSize="30dp"
            android:text="科目名稱"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/txt1"
            android:text="今日作業"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/dateArea"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/layout1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintTop_toBottomOf="@id/txt1"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/txtHw"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="30dp"
                android:background="@drawable/txt_background1"
                android:divider="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt2"
            android:text="明日用品"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/layout1"
            tools:ignore="MissingConstraints" />
        <LinearLayout
            android:id="@+id/StaffArea"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintTop_toBottomOf="@+id/txt2"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/txtSf"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="30dp"
                android:background="@drawable/txt_background1"
                android:divider="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                tools:ignore="MissingConstraints" />

        </LinearLayout>
        <TextView
            android:id="@+id/txt3"
            android:text="其他提醒"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/StaffArea"
            tools:ignore="MissingConstraints" />
        <LinearLayout
            android:id="@+id/OtherArea"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintTop_toBottomOf="@+id/txt3"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/txtOt"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="30dp"
                android:background="@drawable/txt_background1"
                android:divider="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                tools:ignore="MissingConstraints" />

        </LinearLayout>
        <TextView
        android:text="TId"
        android:id="@+id/txtTId"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/txt1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
        <LinearLayout
            android:id="@+id/btnGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints">
            <Button
                android:id="@+id/btnPut"
                android:text="新增通知"
                android:textSize="30dp"
                android:textColor="@color/colorSecond"
                android:background="@drawable/custom_ripple2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btnCxl"
                android:text="取消編輯"
                android:textSize="30dp"
                android:textColor="@color/colorSecond"
                android:background="@drawable/custom_ripple2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
