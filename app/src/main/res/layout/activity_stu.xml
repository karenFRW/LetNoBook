<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/txtTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="學生首頁"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <LinearLayout
        android:id="@+id/dateArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/txtTop"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnPreDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@android:drawable/ic_media_rew" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNextDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@android:drawable/ic_media_ff" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtS"
        android:text="我的日誌"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/dateArea"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txtDiary"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@+id/txtS"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txtT"
        android:text="導師評語"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtDiary"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txtReply"
        android:layout_width="match_parent"

        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@+id/txtT"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:layout_weight="1"
            android:id="@+id/btn學生日誌編輯"
            android:textSize="16dp"
            android:textColor="@android:color/darker_gray"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日誌編輯" />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn學生聯絡事項"
            android:textSize="16dp"
            android:textColor="@android:color/darker_gray"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="聯絡事項" />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn學生班級課表"
            android:textSize="16dp"
            android:textColor="@android:color/darker_gray"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班級課表" />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn學生通知事項"
            android:textSize="16dp"
            android:textColor="@android:color/darker_gray"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知事項" />

    </LinearLayout>




</android.support.constraint.ConstraintLayout>